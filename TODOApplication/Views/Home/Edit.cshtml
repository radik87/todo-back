@model TODOApplication.Models.TaskTodo
@{
    ViewBag.Title = "Editing task";
}
    <form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Title" class="control-label">Title</label>
            <input type="text" asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DueDate" class="control-label">Date</label>
            <input type="number" asp-for="DueDate" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Attachment" class="control-label">Attachment</label>
            <input type="number" asp-for="Attachment" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Summary" class="control-label">Summary</label>
            <input type="number" asp-for="Summary" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>

