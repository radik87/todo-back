@model IEnumerable<TODOApplication.Models.TaskTodo>
@{
    ViewBag.Title = "All Tasks";
}

<a asp-action="Create">Adding task</a>
<table class="table">
    <tr><td>NameOfTask</td></tr>
    @foreach (var item in Model)
    {
        <tr><td>@item.Title</td>
    <td>
        <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">For details</a>
        <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Edit</a>
        <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Delete</a>
    </td></tr>
    }
</table>
